{
  "name": "qoima-backend",
  "version": "1.0.0",
  "description": "Qoima AI Tools Navigator Backend API",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run worker:dev\"",
    "worker": "tsx src/worker.ts",
    "worker:dev": "tsx watch src/worker.ts",
    "build": "esbuild src/index.ts src/worker.ts --bundle --platform=node --outdir=dist --format=cjs --packages=external",
    "start": "node dist/index.js",
    "start:worker": "node dist/worker.js",
    "migrate": "psql -h localhost -U $POSTGRES_USER -d $POSTGRES_DB -f migrations/001_initial_schema.sql && psql -h localhost -U $POSTGRES_USER -d $POSTGRES_DB -f migrations/002_seed_data.sql"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "esbuild": "^0.24.0",
    "express": "^4.18.2",
    "node-cron": "^4.2.1",
    "openai": "^4.24.0",
    "pg": "^8.11.3",
    "pg-boss": "^12.5.3",
    "tsx": "^4.7.0",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.8",
    "concurrently": "^9.2.1",
    "typescript": "^5.3.3"
  }
}
